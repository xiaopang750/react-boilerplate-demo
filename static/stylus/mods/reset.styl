html,body
  overflow-x: hidden;

body
  font-family: $fontFamily
  letter-spacing: 1px
  -webkit-font-smoothing: antialiased

body, dl, dd, dt, ul, ol, h1, h2, h3, h4, h5, h6, input, p
  margin: 0
  padding: 0
  font-weight: normal;

ul
  list-style: none

input[type="submit"]
  border: 0
  outline: 0


